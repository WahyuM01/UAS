<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fitrianti.inibolaapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.fitrianti.inibolaapp.app.FootballApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.fitrianti.inibolaapp.views.search.SearchActivity">
        </activity>
        <activity
                android:name="com.fitrianti.inibolaapp.views.playerdetail.PlayerDetailActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.fitrianti.inibolaapp.views.favorites.FavoritesActivity"
                android:parentActivityName="com.fitrianti.inibolaapp.views.leagues.LeaguesActivity">
        </activity>
        <activity
                android:name="com.fitrianti.inibolaapp.views.teamdetail.TeamDetailActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.fitrianti.inibolaapp.views.matchdetail.MatchDetailActivity">
        </activity>
        <activity
                android:name="com.fitrianti.inibolaapp.views.leaguedetail.LeagueDetailActivity"
                android:parentActivityName="com.fitrianti.inibolaapp.views.leagues.LeaguesActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.fitrianti.inibolaapp.views.leagues.LeaguesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>